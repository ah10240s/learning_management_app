<% provide(:title, "学習予定登録") %>
<!-- Main content -->

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>学習予定登録</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><%= link_to "ホーム", root_url, "data-turbolinks": false %></li>
                    <li class="breadcrumb-item active">学習予定登録</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-8 offset-md-2">
                <%= render 'shared/error_messages', object: @studyplan %>
                <!-- general form elements -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">学習予定登録</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <%= form_with(model: @studyplan, local: true) do |f| %>

                        <%= f.hidden_field :user_id, :value => @user.id %>

                        <div class="card-body">
                            <div class="form-group">
                                <%= f.label :科目 %><br />
                                <%= f.collection_select :subject_id, @subjects, :id, :subject_name, {prompt: "選ぶ"}, {class: "form-control"} %>
                            </div>

                            <div class="form-group">
                                <%= f.label :開始日時 %><br />
                                <%= f.datetime_field :start_daytime, class:"form-control" %>
                            </div>

                            <div class="form-group">
                                <%= f.label :終了日時 %><br />
                                <%= f.datetime_field :end_daytime, class:"form-control" %>
                            </div>

                        </div>
                        <!-- /.card-body -->

                        <div class="card-footer">
                            <%= f.submit "登録する", class:"btn btn-primary" %>
                        </div>
                    <% end %>
                </div>
                <!-- /.card -->
            </div>
        </div>
    </div>

</section>




