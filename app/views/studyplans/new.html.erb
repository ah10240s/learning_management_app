<% provide(:title, "学習予定登録") %>
<!-- Main content -->

<section class="content-header">

</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-8 offset-md-2">
                <!-- general form elements -->
                <div class="card card-info">
                    <div class="card-header">
                        <h3 class="card-title">学習予定登録</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <%= form_with(model: @studyplan, local: true) do |f| %>

                        <%= f.hidden_field :user_id, :value => @user.id %>

                        <div class="card-body">
                            <div class="form-group">
                                <%= f.label :科目 %><br />
                                <%= f.collection_select :subject_id, @subjects.all, :id, :subject_name, {prompt: "選ぶ"}, {class: "form-control"} %>
                            </div>

                            <div class="form-group">
                                <%= f.label :開始日時 %><br />
                                <%= f.datetime_field :start_daytime, class:"form-control" %>
                            </div>

                            <div class="form-group">
                                <%= f.label :終了日時 %><br />
                                <%= f.datetime_field :end_daytime, class:"form-control" %>
                            </div>

                        </div>
                        <!-- /.card-body -->

                        <div class="card-footer">
                            <%= f.submit "登録する", class:"btn btn-info" %>
                        </div>
                    <% end %>
                </div>
                <!-- /.card -->
            </div>
        </div>
    </div>

</section>




